@model IEnumerable<DalToWeb.Models.News>

@{
    ViewBag.Title = "Index";
}


<h2 align="center">News</h2>
<div class="container">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            @if (User.IsInRole("Admin"))
            {
                <div class="text-center">
                    <a href="@Url.Action("Create", "News")" class="btn btn-primary">
                        Add news
                        <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                    </a>
                </div>
            }           
            <div id="postlist">
                @foreach (var item in Model)
                {
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <div class="text-center">
                                <div class="row">
                                    <div class="col-sm-9">
                                        <h3 data-html="true" data-placement="left" class="pull-left">@item.NewsTitle</h3>
                                        @if (User.IsInRole("Admin"))
                                        {
                                        <a href="@Url.Action("Edit", "News", new { id=item.NewsId })" class=" pull-left btn-success">
                                            Edit news
                                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                        </a>
                                        <a href="@Url.Action("Delete", "News", new { id=item.NewsId })" class=" pull-left btn-danger">
                                            Delete news
                                            <span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span>
                                        </a>
                                        }
                                        
                                    </div>
                                    <div class="col-sm-3">
                                        <h4 class="pull-right">
                                            <small><em>@item.NewsCreationDate.ToString("d")</em></small>
                                        </h4>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="panel-body">
                            @item.NewsContent
                        </div>
                    </div>
                }
                

            </div>
            
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-3">
        </div>
        <div class="col-md-1">
        </div>
    </div>
</div>
